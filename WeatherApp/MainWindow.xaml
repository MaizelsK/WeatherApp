<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="750" ResizeMode="NoResize">
    
    <!-- Стили -->
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="100"/>
        </Style>
    </Window.Resources>
    <!-- Конец стилей -->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="4">
            <Label DockPanel.Dock="Left" Content="Прогноз погоды на 7 дней" FontSize="28"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"
                   Style="{x:Null}" FontFamily="Century Gothic"/>

            <ComboBox Name="ComboBox" DockPanel.Dock="Right" FontSize="24" Margin="0,0,20,0"
                      VerticalAlignment="Center" HorizontalAlignment="Right"/>

        </DockPanel>
        <!-- Шапка -->

        <Rectangle Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                   Height="4" Fill="#FF84A0FF" Grid.ColumnSpan="4"/>

        <!-- Элементы прогноза -->
        
        <!-- Day 1-->
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <Label Content="Day 1"/>
            <Image Name="Day1Image"/>
        </StackPanel>

        <!-- Day 2-->
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <Label Content="Day 2"/>
            <Image Name="Day2Image"/>
        </StackPanel>

        <!-- Day 3-->
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="2">
            <Label Content="Day 3"/>
            <Image Name="Day3Image"/>
        </StackPanel>

        <!-- Day 4-->
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="3">
            <Label Content="Day 4"/>
            <Image Name="Day4Image"/>
        </StackPanel>

        <!-- Day 5-->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="0">
            <Label Content="Day 5"/>
            <Image Name="Day5Image"/>
        </StackPanel>

        <!-- Day 6-->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1">
            <Label Content="Day 6"/>
            <Image Name="Day6Image"/>
        </StackPanel>

        <!-- Day 7-->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="2">
            <Label Content="Day 7"/>
            <Image Name="Day7Image"/>
        </StackPanel>

        <!-- Элементы прогноза -->
    </Grid>
</Window>
